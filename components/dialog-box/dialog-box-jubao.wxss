}
.report-image-tip{
  margin-left: 24rpx;
  font-size: 20rpx;
  color: #868788;
}
.dialog-box-tip{
  display: flex;
  /* width: 400rpx; */
  margin: 10rpx 75rpx;
  font-family: PingFang SC;
  font-style: normal;
  font-weight: normal;
  font-size: 24rpx;
  line-height: 36rpx;
  justify-content:center;
  text-align: center;
  color: #4A5559;
}
.dialog-btn-box{
  display: flex;
  /* width: 400rpx; */
  /* height: 80rpx; */
  margin: 16rpx auto 48rpx;
  justify-content: space-around;
}


.dialog-box-cancel,.dialog-box-ok{
  height: 50rpx;
  width: 180rpx;
  border: 2rpx solid   #3E92CC;
  border-radius: 40rpx;

  line-height:50rpx;
  font-size: 26rpx;
  text-align: center;
  font-weight: normal;
  letter-spacing: 0.2vw;
}
.dialog-box-ok{ 
  color:#FAFEFF;
  background-color: #3E92CC;
}
.dialog-box-cancel{
  color:#3E92CC;
}

