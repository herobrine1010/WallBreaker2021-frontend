/*************** 举报部分新增内容 ****************/
.dialog-box-reportReason-box{
  width:452rpx;
  margin:0 auto;
}

.dialog-box-reportReason{
  display:flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 0.5px solid #DEDEDE ;

}
.rightArrow{
  height:30rpx;
  width:18rpx;
  padding-bottom: 12rpx;
  padding-top: 8rpx;
}
.dialog-box-title{
  display: flex;
  margin: 32rpx 75rpx 16rpx;

  
  font-family: PingFang SC;
  font-size: 28rpx;
  font-weight: bold;
  
  line-height: 150%;
  text-align: center;
  justify-content: center;
  color: #333333;
  flex: none;
  order: 0;
  flex-grow: 0;
}
.dialog-box-content{
  /* 后面有了content和title的区分 */
    display: flex;
    margin: 0rpx 75rpx 28rpx;

    font-family: PingFang SC;
    font-size: 24rpx;
    line-height: 150%;
    text-align: center;
    justify-content:center;
    color: #545454;
    flex: none;
    order: 1;
}
.reason{

  font-family: PingFang SC;
  font-style: normal;
  font-size: 24rpx;
  line-height: 150%;
  color: #333333;
  padding-bottom: 12rpx;
  padding-top: 8rpx;
}