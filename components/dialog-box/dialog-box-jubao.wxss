/* components/dialog-box/dialog-box.wxss */
.dialog-box-shade{
  position:fixed;
  display: flex;
  background-color: rgba(0,0,0,0.2);
  width:100%;
  height:100%;
  left:0;
  top:0;
  z-index: 20;
}

.dialog-box-white-bg{

  /* position: absolute; */
  margin: auto auto;
  width: 516rpx;
  height: auto;
  /* left: 100rpx; */
  /* top: 500rpx; */
  border-radius: 50rpx;
  z-index: 40;
  background-color: #FAFEFF;
}

.report-reason-box{
  margin-bottom: 36rpx;
}

.input-placeholder{
  font-size: 24rpx;
  color: #868788;
}

